---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="Jorge Álvarez - Software Developer">
  <main id="main-content" class="w-full py-24 px-5">
    <div class="mx-auto text-center">
      <div class="relative flex flex-col items-center justify-center mb-6">
        <img src="/images/jeam.svg" class="w-60 pointer-events-none select-none" alt="jeam logo" />
      </div>
      <div class="mb-3">
        <h1 class="text-3xl mb-3 font-extrabold font-display">Jorge Álvarez</h1>
        <p class="mb-3">Hi! I'm a Software Developer and welcome to my humble place on the www</p>
      </div>
      <Nav withSocial />
    </div>
  </main>
</Layout>